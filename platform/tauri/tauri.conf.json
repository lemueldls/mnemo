{
  "$schema": "../../node_modules/@tauri-apps/cli/config.schema.json",
  "version": "0.1.0",
  "productName": "mnemo",
  "identifier": "dev.lemueldls.mnemo",
  "build": {
    "beforeBuildCommand": "pnpm build",
    "beforeDevCommand": "pnpm dev --host",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../../dist/public"
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": "all",
    "createUpdaterArtifacts": true
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [{ "title": "Mnemo" }]
  },
  "plugins": {
    "cli": {
      "description": "Note-taking app designed to enhance the retention of information.",
      "args": [],
      "subcommands": {}
    },
    "deep-link": {
      "mobile": [
        { "host": "mnemo.nuxt.dev" },
        { "host": "mnemo.pages.dev" },
        { "host": "notes.lemueldls.dev" }
      ],
      "desktop": {
        "schemes": ["mnemo"]
      }
    },
    "updater": {
      "createUpdaterArtifacts": true,
