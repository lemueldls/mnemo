{
    "$schema": "../../node_modules/@tauri-apps/cli/config.schema.json",
    "version": "0.2.2",
    "productName": "Mnemo",
    "identifier": "dev.lemueldls.mnemo",
    "build": {
        "beforeBuildCommand": "pnpm build",
        "beforeDevCommand": "pnpm dev --public",
        "devUrl": "http://localhost:3000",
        "frontendDist": "../../dist/public"
    },
    "bundle": {
        "active": true,
        "license": "AGPL-3.0",
        "licenseFile": "../../LICENSE",
        "category": "Productivity",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "targets": [
            "dmg",
            "nsis",
            "deb",
            "appimage"
        ],
        "linux": {
            "deb": {
                "files": {
                    "/usr/share/licenses/mnemo/LICENSE": "../../LICENSE"
                }
            }
        },
        "macOS": {
            "signingIdentity": "-"
        },
        "createUpdaterArtifacts": true
    },
    "app": {
        "security": {
            "csp": null
        },
        "windows": []
    },
    "plugins": {
        "cli": {
            "description": "Note-taking app designed to enhance the retention of information.",
            "args": [],
            "subcommands": {}
        },
        "deep-link": {
            "mobile": [
                {
                    "scheme": [
                        "mnemo"
                    ],
                    "appLink": false
                },
                {
                    "scheme": [
                        "https"
                    ],
                    "host": "notes.lemueldls.workers.dev",
                    "pathPrefix": [
                        "/auth/confirm"
                    ],
                    "appLink": true
                }
            ],
            "desktop": {
                "schemes": [
                    "mnemo"
                ]
            }
        },
        "updater": {
            "createUpdaterArtifacts": true,
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDE0REVCRDBBNzBDODcyOUIKUldTYmNzaHdDcjNlRkdSOEF1NFRxeWM3bXdXWVBrV3BRd1RIZWtpRmpFZlE4VTg5ZlFlbGdTcHEK",
            "endpoints": [
                "https://github.com/lemueldls/mnemo/releases/latest/download/latest.json"
            ]
        }
    }
}
