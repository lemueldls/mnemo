{
  "$schema": "../../node_modules/@tauri-apps/cli/schema.json",
  "version": "0.1.0",
  "productName": "mnemo",
  "identifier": "com.lemueldls.mnemo",
  "build": {
    "beforeBuildCommand": "yarn generate",
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../../.output/public"
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": "appimage"
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "mnemo",
        "visible": false,
        "width": 800
      },
      {
        "center": true,
        "decorations": false,
        "closable": false,
        "hiddenTitle": true,
        "skipTaskbar": true,
        "height": 200,
        "label": "splashscreen",
        "resizable": false,
        "shadow": false,
        "transparent": true,
        "url": "splashscreen",
        "width": 400
      }
    ]
  }
}
