{
  "$schema": "../../node_modules/@tauri-apps/cli/schema.json",
  "version": "0.1.0",
  "productName": "mnemo",
  "identifier": "dev.lemueldls.mnemo",
  "build": {
    "beforeBuildCommand": "yarn build",
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../../dist"
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": "all",
    "createUpdaterArtifacts": true
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "mnemo",
        "decorations": false
      }
    ]
  },
  "plugins": {
    "deep-link": {
      "mobile": [
        { "host": "mnemo.nuxt.dev" },
        { "host": "mnemo.pages.dev" },
        { "host": "notes.lemueldls.dev" }
      ],
      "desktop": {
        "schemes": ["mnemo"]
      }
    },
    "updater": {
      "createUpdaterArtifacts": true,
      "endpoints": [],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDE0REVCRDBBNzBDODcyOUIKUldTYmNzaHdDcjNlRkdSOEF1NFRxeWM3bXdXWVBrV3BRd1RIZWtpRmpFZlE4VTg5ZlFlbGdTcHEK"
    }
  }
}
